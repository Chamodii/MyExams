<%include partials/headerAdmin.ejs%>

        <div class="col-sm-6">
            <h2 class="mt-4">Register New Student</h2>
            <form action="/registerStudent" method="post">
                <div class="form-group alert">
                    <strong>
                        <%if(message){%>
                        <p class="text-danger"><%=message%></p>
                        <%}%>
                    </strong>
                </div>

                <div  class="form-group">
                    <input type="text" name="firstName" placeholder="First Name" required>
                    <input type="text" name="lastName" placeholder="Last Name" required>
                </div>
                <div class="form-group">
                    <input type="text" name="username" placeholder="ID" maxlength="7" minlength="7" required>
                </div>
                <div class="form-group">
                    <input type="date" name="DOB" placeholder="DD/MM/YYYY" required>
                    <label for="DOB">(Date of Birth)</label>
                </div>
                <div class="form-group">
                    <select name="batch" data-style="btn-info" class="selectpicker" required>
                        <option value="14">14</option>
                        <option value="15">15</option>
                        <option value="16">16</option>
                        <option value="17">17</option>
                        <option value="18">18</option>
                        <option value="19">19</option>
                        <option value="20">20</option>
                    </select>
                </div>
                <div class="form-group">
                    <select name="faculty" data-style="btn-info" class="selectpicker" required>
                        <option value="Engineering">Engineering</option>
                        <option value="IT">Information Technology</option>
                        <option value="Business">Business Management</option>
                        <option value="Architecture">Architecture</option>
                    </select>
                </div>
                <div class="form-group">
                    <select name="degree" data-style="btn-info" class="selectpicker" required>
                        <option value="Bsc">Bachelor of Science (Engineering)</option>
                        <option value="Bit">Bachelor of Information Technology</option>
                        <option value="Bm">Bachelor of Management</option>
                    </select>
                </div>
                <div class="form-group">
                    <select name="department" data-style="btn-info" class="selectpicker" required>
                        <option value="CSE">Computer Science & Engineering</option>
                        <option value="ME">Mechanical Engineering</option>
                        <option value="ENTC">Electronics & Telecommunication Engineering</option>
                        <option value="CE">Civil Engineering</option>
                        <option value="SEM1">Semester 1</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="text" name="NIC" placeholder="NIC" maxlength="10" minlength="10" required>
                </div>
                <div class="form-group">
                    <input type="password" name="password" placeholder="Password" value="password">
                </div>
                <p>
                    <button type="submit" class="btn btn-success">Submit</button>
                </p>
            </form>

        </div>

        <div class="col-sm-3 sidebar content-box" style="background-color:#eee;">
            <ul class="nav">
                <li>
                    <h5 class="mt-3" id="upcoming_events">Upcoming Events<span onclick="document.getElementById('notice_bar1').style.display='none'" class="close" data-dismiss="alert" position="left">&times;</button></h5>
                    <p id="para">The Examinations Division has responsibility for making arrangements for the administration of all public examination</p>
                </li>
                <li>
                    <hr></hr>
                    <h5 class="mt-3" id="notices">Notices<span onclick="document.getElementById('notice_bar1').style.display='none'" class="close" data-dismiss="alert" position="left">&times;</button></h5>
                    <p id="para">The Examinations Division has responsibility for making arrangements for the administration of all public examination  </p>
                </li>
                <li>
                    <hr></hr>
                    <h6 id="related"> Related Services</h6>
                    <ul style="list-style-type:none">
                        <li style="font-size:12px;"><a href="#">Results</a><li>
                        <li style="font-size:12px;"><a href="#">Module Registration</a></li>
                    </ul>
                </li>
            </ul>
        </div>

    </div>
</div>
